<h1>Listing foods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Calories</th>
    <th>Protein</th>
    <th>Carbohydrates</th>
    <th>Sugars</th>
    <th>Saturated fats</th>
    <th>Unsaturated fats</th>
    <th>Cholesterol</th>
    <th>Fibre</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.calories %></td>
    <td><%= food.protein %></td>
    <td><%= food.carbohydrates %></td>
    <td><%= food.sugars %></td>
    <td><%= food.saturated_fats %></td>
    <td><%= food.unsaturated_fats %></td>
    <td><%= food.cholesterol %></td>
    <td><%= food.fibre %></td>
    <td><%= food.food_category.name %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Food', new_food_path, class: "small button radius" %>
