<h1>Register</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :email, class: "right inline", title: "Enter a valid email", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :password, class: "right inline", title: "Enter a password between 8 and 16 characters", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password, :data => {:indicator => "pwindicator"} %>
      </div>

    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :password_strength, class: "right inline", title: "Password Strength"%>
      </div>
      <div class="small-9 columns">
        <div id="pwindicator">
          <div class="bar"></div>
          <div class="label"></div>
        </div>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :password_confirmation, class: "right inline", title: "Password confirmation should match the password ", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit "Register" %>
      </div>
    </div>
<% end %>

<div class="row collapse">
  <div class="small-9 small-offset-3 columns">
    <%= render "devise/shared/links" %>
  </div>
</div>