<%= form_for(@food_intake_log, remote: true) do |f| %>
    <% if @food_intake_log.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @food_intake_log.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :intake_date, class: "right inline", title: "Date of the meal", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <div class="date">
          <%= f.text_field :intake_date %>
        </div>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :intake_time, class: "right inline", title: "Time of the meal", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns in_one_line left" style="width:100px;">
        <%= f.time_select :intake_time %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :food, class: "right inline", title: "Type of food", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.grouped_collection_select(:food_id, FoodCategory.order(:name), :foods, :name, :id, :name, {include_blank: true, :data => {:placeholder => "Select food type"}}, {:class => "chosen-select", :tabindex => "-1", :style => "width:350px;", }) %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :amount_in_grams, class: "right inline", title: "How many grams", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :amount %>
      </div>
    </div>
    <div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit %>
      </div>
    </div>
<% end %>
