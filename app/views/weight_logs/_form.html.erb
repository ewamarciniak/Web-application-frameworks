<%= form_for(@weight_log, remote: true) do |f| %>
    <% if @weight_log.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @weight_log.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :weight, class: "right inline", title: "Weight in kilograms", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :weight, :placeholder => "in kilograms" %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :measurement_on, class: "right inline", title: "Select the date of the weight measurement", data: {tooltip: true} %>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :measured_on, :placeholder => "date of the measurement" %>
      </div>
    </div>
    <div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit %>
      </div>
    </div>
<% end %>
