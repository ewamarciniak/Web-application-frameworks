<h1>Profile</h1>
<% if @profile %>
    <table>
      <tr>
        <th>Gender</th>
        <% if @profile.gender == "female" %>
            <th>Pregnant</th>
            <th>Brestfeeding</th>
        <% end %>
        <th>Height</th>
        <th>Date of birth</th>
        <th></th>
      </tr>
      <tr>
        <td><%= @profile.gender %></td>

        <% if @profile.gender == "female" %>
            <td><%= @profile.pregnant %></td>
            <td><%= @profile.brestfeeding %></td>
        <% end %>
        <td><%= @profile.height %></td>
        <td><%= @profile.dob %></td>
        <td><%= link_to 'Edit Information', edit_profile_path(@profile) %></td>
      </tr>

    </table>
<% else %>
    <p>Please submit your profile information.</p>
    <%= link_to 'Create Profile', new_profile_path, class: "small button radius" %>
<% end %>


